            chartType: "Line",
            name: "Σταθερό Κόστος",
            xValue: new[] { 0, 1 },
            yValues: new[] { Model.deadspot.afc, Model.deadspot.afc})
        .AddSeries(
            chartType: "Line",
            name: "Συνολικό Κόστος",
            xValue: new[] { 0, 1 },
            yValues: new[] { Model.deadspot.afc, Model.deadspot.afc+Model.deadspot.avc })
